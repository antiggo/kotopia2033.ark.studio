.Paper
    position relative
    padding 0 2.2vw 0 4vw
    
    background #dddddd
    border-radius radius radius 0 radius
    @media $screen-phone
        border-radius 12px 12px 0 12px
        padding 0px 32px 0 54px !important
        width 73%
        margin -110px auto 0 auto
            
    margin-bottom margin-items
    z-index 10
    margin-top 7vw
    overflow hidden

    

    &__dot
        background red
        width 1.3vw
        height 1.3vw
        position absolute
        border-radius 100%
        left .4vw
        &_Top
            background #1f0b10
            top .4vw
        &_Bottom
            background background-muted
            bottom .4vw
        &_MiddleTop
            background #2b221d
            top 40%
        &_MiddleBottom
            background #2b221d
            bottom 50%
        

    @media $screen-phone
        padding 0 16px
        margin-bottom 20px

    &__title
        times()
        color red
        margin-top .5vw
        font-size 5vw
        text-transform uppercase
        margin-bottom 10vw
        @media $screen-phone
            font-size 60px
            line-height 60px
            margin-top -22px

    &__text
        color foreground
        margin-bottom 1.5vw

    &__p
        & + &
            margin-top .2vw

    &__author
        color color-green
        font-weight 500
        margin-bottom 0.5vw

    &__signature
        width 90%
        height 7vw
        background-size cover
        background-repeat no-repeat
        background-color black
        background-image url('../../assets/signature.png')