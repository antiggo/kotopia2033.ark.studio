.Island
    position absolute
    cursor pointer
    font-family 'OCR'
    text-align center    
    
    ::selection
        background #FCEF3A
        color #241B1B
    
    &_active
        // Add any visual styling for active Island here
        // For example: z-index, filters, etc.
        z-index 10
        .Image
            filter brightness(0) saturate(100%) invert(90%) sepia(94%) saturate(500%) hue-rotate(360deg)
            scale 1.2
            &:hover 
                scale 1.2
    &__hint
        color #241B1B
        background #FCEF3A
        border 2px solid #1abef07d
        display inline-block
        margin 0 auto
        letter-spacing -.1vw
        border-radius 10vw
        text-transform uppercase
        padding .2vw .6vw
        margin-bottom 2vw
        opacity 0
        visibility hidden
        translate 0 0.5vw
        transition opacity 0.3s ease, visibility 0.3s ease, translate 0.3s ease
        --hint-float-y 0.3vw
        --hint-float-duration 3s
        animation hintFloat var(--hint-float-duration) ease-in-out infinite
    
    &:hover &__hint
        opacity 1
        visibility visible
        translate 0 -0.5vw
    &__num
        font-size 5vw
        line-height 5vw
        letter-spacing -.5vw
    &__side
        position absolute
        right 0
        top .7vw
        text-transform uppercase
        font-size 1.8vw
        line-height 2vw
        letter-spacing -.12vw
        text-align right
    &__subtitle
        color #4B4B4B
    &__strong
        background #fcef3a
        color #241b1b
        text-transform uppercase
    &__head
        position relative
        margin-bottom .5vw
    &__card
        text-align left
        position absolute
        top 0
        width 34vw
        background #241B1B
        color #FCEF3A
        border-radius 1vw
        padding .8vw 1.6vw
        opacity 0
        visibility hidden
        pointer-events none
        transform scale(0.95) translateY(-1vw)
        transition opacity 0.2s ease, visibility 0.3s ease, transform 0.3s ease

    &_active &__card
        opacity 1
        visibility visible
        pointer-events auto
        transform scale(1) translateY(0)
    &__footer
        width 100%
        height 4.8vw
        background-size contain
        background-repeat no-repeat
        background-image url('../../assets/card-footer.svg')
    &__line
        
        width 100%
        height .2vw
        background-size contain
        background-repeat no-repeat
        background-image url('../../assets/card-line.svg')
    &__text
        padding 1vw 0 2vw 0
    &__p
        & + &
            margin-top 1vw

@keyframes hintFloat
    0%, 100%
        transform translateY(0)
    50%
        transform translateY(calc(-1 * var(--hint-float-y, 0.3vw)))