.Image
    position absolute
    background-size contain
    background-repeat no-repeat
    width 100%
    z-index 2

// staggered variations so different Images float differently
.Image_Challenges
    --float-x-amplitude 0vw
    --float-y-amplitude .8vw
    --float-rot-amplitude .5deg
    --float-duration 6s
    --float-delay -0.7s
    animation floatComposite var(--float-duration) ease-in-out var(--float-delay) infinite
    will-change transform
    &:hover
        background-image url('../../assets/challenges-hover.png') !important



.Image_ChallengesHover
    opacity 0
    transition opacity 0.3s ease
    &:hover
        opacity 1

.Image_Growth,
.Image_GrowthHover
    --float-x-amplitude 0vw
    --float-y-amplitude .6vw
    --float-rot-amplitude .3deg
    --float-duration 6s
    --float-delay -0.5s
    animation floatComposite var(--float-duration) ease-in-out var(--float-delay) infinite
    will-change transform

.Image_Growth
    transition opacity 0.3s ease
    &:hover
        opacity 0
    &:hover + .Image_GrowthHover
        opacity 1

.Image_GrowthHover
    opacity 0
    transition opacity 0.3s ease
    &:hover
        opacity 1

.Image_Future,
.Image_FutureHover
    --float-x-amplitude 0vw
    --float-y-amplitude .7vw
    --float-rot-amplitude -.4deg
    --float-duration 6s
    --float-delay -1s
    animation floatComposite var(--float-duration) ease-in-out var(--float-delay) infinite
    will-change transform

.Image_Future
    transition opacity 0.3s ease
    &:hover
        opacity 0
    &:hover + .Image_FutureHover
        opacity 1

.Image_FutureHover
    opacity 0
    transition opacity 0.3s ease
    &:hover
        opacity 1

