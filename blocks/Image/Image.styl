.Image
    position absolute
    // floating defaults (can be customized per-instance)
    --float-x-amplitude 0vw
    --float-y-amplitude .6vw
    --float-rot-amplitude 0deg
    --float-duration 6s
    --float-delay 0s
    animation floatComposite var(--float-duration) ease-in-out var(--float-delay) infinite
    will-change transform
    &_Challnges
        &:hover
            width 90%
            height 7vw
            background-size cover
            background-repeat no-repeat
            background-image url('../../assets/challenges.svg')
    &_Rotate
        transform rotate(-4deg)
    & + &
        margin-top 32px
    &__image
        radius()
        width 100%
        @media $screen-phone
            object-fit cover
            object-position center
    &__subtitle
        text-align left
        color #0000004f
        margin-top 4px
    z-index 2
    &:hover
        --float-y-amplitude 1.2vw
        --float-x-amplitude .3vw
        --float-duration 3s

// staggered variations so different Images float differently
.Image:nth-of-type(1)
    --float-y-amplitude .8vw
    --float-rot-amplitude .5deg
    --float-delay -0.7s

.Image:nth-of-type(2)
    --float-x-amplitude .4vw
    --float-y-amplitude .5vw
    --float-rot-amplitude .6deg
    --float-duration 7.5s
    --float-delay -1.1s

.Image:nth-of-type(3)
    --float-y-amplitude 1vw
    --float-rot-amplitude -.4deg
    --float-duration 5.5s
    --float-delay -0.9s

.Image:nth-of-type(4)
    --float-x-amplitude -.5vw
    --float-y-amplitude .7vw
    --float-rot-amplitude .8deg
    --float-duration 8s
    --float-delay -1.5s

.Image:nth-of-type(5)
    --float-x-amplitude .2vw
    --float-y-amplitude .9vw
    --float-rot-amplitude 1deg
    --float-duration 6.8s
    --float-delay -0.3s

.Image:nth-of-type(6)
    --float-x-amplitude -.3vw
    --float-y-amplitude .4vw
    --float-rot-amplitude -.9deg
    --float-duration 7.2s
    --float-delay -2s

@keyframes floatComposite
    0%, 100%
        transform translate(0, 0) rotate(0)
    50%
        transform translate(var(--float-x-amplitude, 0), calc(-1 * var(--float-y-amplitude, .6vw))) rotate(var(--float-rot-amplitude, 0deg))