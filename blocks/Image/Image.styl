.Image
    
    background-size cover
    background-repeat no-repeat
    width 100%
    z-index 2
    scale 1
    --parallax-y 0px
    transition scale 0.3s ease, background-image 0.3s ease
    &:hover 
        scale 1.075
        cursor pointer
        will-change transform


.Image
    animation floatComposite var(--float-duration, 6s) ease-in-out var(--float-delay, 0s) infinite
    
    &:nth-of-type(1)
        --float-x-amplitude 0vw
        --float-y-amplitude .8vw
        --float-rot-amplitude .5deg
        --float-duration 6s
        --float-delay -0.7s
    
    &:nth-of-type(2)
        --float-x-amplitude .4vw
        --float-y-amplitude .5vw
        --float-rot-amplitude .6deg
        --float-duration 7.5s
        --float-delay -1.1s
    
    &:nth-of-type(3)
        --float-x-amplitude 0vw
        --float-y-amplitude 1vw
        --float-rot-amplitude -.4deg
        --float-duration 5.5s
        --float-delay -0.9s
    
    &:nth-of-type(4)
        --float-x-amplitude -.5vw
        --float-y-amplitude .7vw
        --float-rot-amplitude .8deg
        --float-duration 8s
        --float-delay -1.5s
    
    &:nth-of-type(5)
        --float-x-amplitude .2vw
        --float-y-amplitude .9vw
        --float-rot-amplitude 1deg
        --float-duration 6.8s
        --float-delay -0.3s
    
    &:nth-of-type(6)
        --float-x-amplitude -.3vw
        --float-y-amplitude .4vw
        --float-rot-amplitude -.9deg
        --float-duration 7.2s
        --float-delay -2s
    
    &:nth-of-type(7)
        --float-x-amplitude .3vw
        --float-y-amplitude .6vw
        --float-rot-amplitude .3deg
        --float-duration 6.3s
        --float-delay -1.8s
    
    &:nth-of-type(8)
        --float-x-amplitude -.2vw
        --float-y-amplitude .85vw
        --float-rot-amplitude -.5deg
        --float-duration 7.8s
        --float-delay -0.5s

@keyframes floatComposite
    0%, 100%
        translate 0 var(--parallax-y, 0)
        rotate 0deg
    50%
        translate var(--float-x-amplitude, 0) calc(var(--parallax-y, 0) + (-1 * var(--float-y-amplitude, .6vw)))
        rotate var(--float-rot-amplitude, 0deg)