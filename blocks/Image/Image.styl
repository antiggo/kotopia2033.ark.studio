.Image
    position absolute
    --float-amplitude .6vw
    animation floatY 6s ease-in-out infinite
    will-change transform
    &_Rotate
        transform rotate(-4deg)
    & + &
        margin-top 32px
    &__image
        radius()
        width 100%
        @media $screen-phone
            object-fit cover
            object-position center
    &__subtitle
        text-align left
        color #0000004f
        margin-top 4px
    z-index 2
    &:hover
        --float-amplitude 1.2vw
        animation-duration 3s

@keyframes floatY
    0%, 100%
        transform translateY(0)
    50%
        transform translateY(calc(-1 * var(--float-amplitude, .6vw)))