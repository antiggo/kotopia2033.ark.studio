@keyframes floatComposite
    0%, 100%
        transform translate(0, 0) rotate(0)
    50%
        transform translate(var(--float-x-amplitude, 0), calc(-1 * var(--float-y-amplitude, .6vw))) rotate(var(--float-rot-amplitude, 0deg))