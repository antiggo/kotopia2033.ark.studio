.Border
    size = .8vw
    background #FCEF3A
    z-index 9999
    position fixed
    &_Top, &_Bottom
        height size
        width 100%
    &_Top
        top 0
    &_Bottom
        bottom 0
    &_Left, &_Right
        width size
        height 100%
    &_Left
        left 0
    &_Right
        right 0

.Ark
    position fixed
    bottom 0
    right 0
    z-index 100
    width 6vw
    height 3vw
    background-size contain
    background-repeat no-repeat
    background-image url('../../assets/ark.svg')

.Footer
    position fixed
    bottom 0
    right 0
    left 0
    z-index 100
    width 26vw
    height 3vw
    margin 0 auto
    background-size contain
    background-repeat no-repeat
    background-image url('../../assets/map-footer-text.svg')
    transform translateY(0)
    transition transform 0.3s ease, opacity 0.3s ease
    
    &_hidden
        transform translateY(100%)
        opacity 0

.Map
    padding-bottom 15vw
    &__water
        width 100%
        height 100vh
        background-size cover
        background-repeat no-repeat
        background-color black
        background-image url('../../assets/water.jpg')
        position fixed
        top 0
        --parallax-y 0px
        transform translateY(var(--parallax-y))
        
    &__logo
        top -7.9vw
        width 100vw
        height 22vw
        background-size cover
        background-repeat no-repeat
        background-image url('../../assets/logo.svg')
        position fixed
        transition top 0.3s cubic-bezier(0.255, 0.03, 0.515, 0.955)
        &:hover
            top -2vw
            cursor pointer
            transition top 0.2s cubic-bezier(0.255, 0.03, 0.515, 0.955)
    &__content
        background #241B1B
        position fixed
        right .2vw
        top .2vw
        bottom .2vw
        width 26vw
        height 100vh
        padding 3vw
        color #fff
        font-size 1.4vw
        line-height 1.8vw
        overflow-y auto
        overflow-x hidden
        -webkit-overflow-scrolling touch
        scrollbar-width none /* Firefox */
        -ms-overflow-style none /* IE and Edge */
        &::-webkit-scrollbar
            display none /* Chrome, Safari, Opera */
    &__p
        margin-top 1.2vw
    &__subtitle
        font-family 'OCR'
        color #FCEF3A
        text-transform uppercase
        letter-spacing 0.5vw
        text-align center
        margin 3vw 0
        font-size 1.7vw
        line-height 1.4vw
    &__text
        font-family 'ARKDiatypeMono'
        font-size 1.1vw
        line-height 1.4vw
    &__title
        color #FCEF3A
        text-transform uppercase
        font-family: 'Microgramma D'
        font-size 2.7vw
        line-height 4vw
        text-align center
    &__item
        position absolute
















.Signature
    width 34vw
    margin-top -1vw
    margin-left -1vw
    height 9vw
    background-size cover
    background-repeat no-repeat
    background-color black
    background-image url('../../assets/signature.png')



.Text
    &_Size
        &_XL
            color red
            text-transform uppercase
            font-size 2.5vw
            line-height 2.7vw
            margin 0 auto
            text-align center
            max-width 48%
            position relative
            z-index 10


.App
    
    cursor()
    font-family 'Times New Roman'
    font-size 1.1vw
    line-height 1.3vw
    letter-spacing -.1vw

    overflow-x hidden
    overflow-y auto
    background background
    color foreground
    padding 0
    margin 0
    touch-highlight none
    font-smoothing antialiased
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    position relative
    cursor url('/assets/cursor.svg'), auto


    &__wrap
        &_Absolute
            position absolute
            margin-top -58vw

    &__item
        position relative
        &_Absolute
            position absolute
        &_SideBar
            
            &:after
                @media $screen-phone
                    display none
                content ''
                width 10vw
                position absolute
                right 0
                z-index 1000
                top 0
                height 100%
            &_Beige
                &:after
                    background background
            &_Charcoal
                &:after
                    background charcoal
        &_Color
            &_Muted
                background background-muted
            &_Gray
                background background-gray
        &_Background
            
            width 100vw
            height 56vw
            

